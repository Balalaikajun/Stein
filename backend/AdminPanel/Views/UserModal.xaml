<Window x:Class="AdminPanel.UserModal"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit User" Width="300" SizeToContent="Height"
        WindowStartupLocation="CenterOwner">
    <StackPanel Margin="10">
        <TextBlock Text="Username:"/>
        <TextBox x:Name="LoginTextBox" MaxLength="50"/>
        <TextBlock Text="Password:" Margin="0 5 0 0"/>
        <TextBox x:Name="PasswordTextBox" MaxLength="50"/>
        
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0 10 0 0">
            <Button Content="OK" Click="Ok_Click" Width="60" Margin="0 0 5 0"/>
            <Button Content="Cancel" Click="Cancel_Click" Width="60"/>
        </StackPanel>
    </StackPanel>
</Window>